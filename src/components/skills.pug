

script(type="text/x-template")#skills-list
    ul.skills
        li.skills-item(v-for="skill in skills")
            row(
                :skill="skill"
            )

script(type="text/x-template")#skills-row
    .skills-row
        h5.title-five {{skill.skillsGroup}}
        ul.myskills__block-list
            li.myskills__block-item(v-for="(skillPercent, skillName) in skill.skills")
                skill(
                    :skillName="skillName"
                    :skillPercent="skillPercent"
                )

script(type="text/x-template")#skills-item
    .skill
        svg.percentage(class="circle" viewBox="0 0 100 100" preserverAspectRaio="none")
            circle.circle.circle-under(cx='50' cy='50' r='40')
            circle.circle.circle-above(cx='50' cy='50' r='40' ref="circle" style=`animation-delay: -`)
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                stop(offset="0%" stop-color="#5500f2")
                stop(offset="100%" stop-color="#8f00ef")
        .myskills__block-item-style
            .myskills__block-item-name {{skillName}}