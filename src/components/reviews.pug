script(type="text/x-template")#reviews
    .reviews-vue
        .reviews__block
            h2.title-two Что обо мне говорят
            btns(
                :flickityRefs="flickityRefs"
            )
        list(
            @loadRef="updatedRefs"
            :reviews="reviews"
        )
              
script(type="text/x-template")#reviews-btns
    .reviews__controls
        button.reviews__controls-button-prev(@click="previous()")
        button.reviews__controls-button-next(@click="next()")


script(type="text/x-template")#reviews-list
    .reviews__comment
        flickity.reviews__comment-list(ref="flickity" :options="flickityOptions")
            item.carousel-cell(
                v-for="review in reviews"
                :review="review"
                :key="review.key"
            )

script(type="text/x-template")#reviews-item
    .item
        .reviews__comment-text {{review.comment}}
        .reviews__comment-sender
            .reviews__comment-avatar(style=`backgroundImage:url(+review.image)`)
            .reviews__comment-sender-info
                .reviews__comment-sender-name {{review.name}}
                .reviews__comment-sender-position {{review.position}}